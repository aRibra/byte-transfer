<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cyan_background"
    android:orientation="vertical"
    android:padding="25dp"
    android:weightSum="100" >
	
    <Button
        android:id="@+id/v_pingButton"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:text="Check for available devices"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >
    </LinearLayout>
	
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15" >

            <TextView
                android:id="@+id/v_textView2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_weight="30" />

        
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="30"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/connectedDevices_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/availableIpAddresses_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30.45"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="Avialable IP Addresses!" />

            <ListView
                android:id="@+id/iplist"
                android:layout_width="fill_parent"
                android:layout_height="258dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>